{
  "expo": {
    "name": "Datrix",
    "slug": "datrix-mobile",
    "scheme": "datrix",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "platforms": ["ios", "android"],
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E3A8A"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.datrix.mobile",
      "deploymentTarget": "15.1",
      "infoPlist": {
        "NSCameraUsageDescription": "Datrix needs camera access to capture survey photos",
        "NSPhotoLibraryUsageDescription": "Datrix needs photo library access to attach survey photos",
        "NSLocationWhenInUseUsageDescription": "Datrix needs location access to capture GPS coordinates for surveys"
      },
      "config": {
        "googleSignIn": {
          "reservedClientId": "com.googleusercontent.apps.834385599368-1gasplu848e78k211tr89io9qqnkh988"
        }
      }
    },
    "android": {
      "package": "com.datrix.mobile",
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1E3A8A"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Datrix needs camera access to capture survey photos"
        }
      ],
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Datrix needs location access to capture GPS coordinates for surveys"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Datrix needs photo library access to attach survey photos"
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 24
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ]
    ],
    "extra": {
      "SUPABASE_URL": "https://zbtjfjflfvtsoctubtnx.supabase.co",
      "eas": {
        "projectId": ""
      },
      "router": {
        "origin": false
      }
    },
    "experiments": {
      "typedRoutes": true,
      "reactNativeBottomTabs": true
    }
  }
}
